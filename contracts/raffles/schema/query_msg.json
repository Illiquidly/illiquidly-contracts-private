{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "oneOf": [
    {
      "type": "object",
      "required": [
        "contract_info"
      ],
      "properties": {
        "contract_info": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": [
        "raffle_info"
      ],
      "properties": {
        "raffle_info": {
          "type": "object",
          "required": [
            "raffle_id"
          ],
          "properties": {
            "raffle_id": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": [
        "get_all_raffles"
      ],
      "properties": {
        "get_all_raffles": {
          "type": "object",
          "properties": {
            "filters": {
              "anyOf": [
                {
                  "$ref": "#/definitions/QueryFilters"
                },
                {
                  "type": "null"
                }
              ]
            },
            "limit": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0.0
            },
            "start_after": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": [
        "ticket_number"
      ],
      "properties": {
        "ticket_number": {
          "type": "object",
          "required": [
            "owner",
            "raffle_id"
          ],
          "properties": {
            "owner": {
              "type": "string"
            },
            "raffle_id": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      },
      "additionalProperties": false
    }
  ],
  "definitions": {
    "QueryFilters": {
      "type": "object",
      "properties": {
        "contains_token": {
          "type": [
            "string",
            "null"
          ]
        },
        "owner": {
          "type": [
            "string",
            "null"
          ]
        },
        "states": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "ticket_depositor": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
